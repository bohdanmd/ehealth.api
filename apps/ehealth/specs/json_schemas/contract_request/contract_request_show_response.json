{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "contract_request ID"
        },
        "contractor_legal_entity_id": {
            "type": "string",
            "description": "legal entity ID which make contract request"
        },
        "contractor_owner_id": {
            "type": "string",
            "description": "person which represent legal entity"
        },
        "contractor_base": {
            "type": "string",
            "description": "documents which allows to represent clinic"
        },
        "contractor_payment_details": {
            "type": "object",
            "properties": {
                "bank_name": {
                    "type": "string",
                    "description": "bank name"
                },
                "MFO": {
                    "type": "string",
                    "description": "bank code"
                },
                "payer_account": {
                    "type": "string",
                    "description": "Номер банківського рахунку"
                }
            },
            "required": [
                "bank_name",
                "MFO",
                "payer_account"
            ]
        },
        "contractor_rmsp_amount": {
            "type": "number",
            "description": "the amount of population which were served by this MSP"
        },
        "external_contractor_flag": {
            "type": "boolean",
            "description": "the existence of second appendix"
        },
        "external_contractors": {
            "type": "array",
            "properties": {
                "legal_entity_id": {
                    "type": "string",
                    "description": "external_contractor ID"
                },
                "contract": {
                    "type": "object",
                    "properties": {
                        "number": {
                            "type": "string",
                            "description": "number of contract with sub contractor"
                        },
                        "issued_at": {
                            "type": "string",
                            "description": "issue date of contract with sub contractor"
                        },
                        "expires_at": {
                            "type": "string",
                            "description": "expiry date of contract with sub contractor"
                        }
                    },
                    "required": [
                        "number",
                        "issued_at",
                        "expires_at"
                    ]
                },
                "divisions": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string",
                                "enum": [
                                    "2922a240-63db-404e-b730-09222bfeb2dd"
                                ]
                            },
                            "medical_service": {
                                "type": "string",
                                "enum": [
                                    "Послуга ПМД"
                                ]
                            }
                        },
                        "required": [
                            "id",
                            "medical_service"
                        ],
                        "additionalProperties": false
                    }
                }
            },
            "required": [
                "legal_entity_id",
                "contract",
                "divisions"
            ]
        },
        "contractor_employee_divisions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "employee_id": {
                        "type": "string",
                        "description": "employee ID"
                    },
                    "staff_units": {
                        "type": "number"
                    },
                    "declaration_limit": {
                        "type": "number",
                        "description": "declaration limit for current employee within the contract"
                    },
                    "division_id": {
                        "type": "string",
                        "description": "division ID"
                    }
                },
                "required": [
                    "employee_id",
                    "staff_units",
                    "declaration_limit",
                    "division_id"
                ],
                "additionalProperties": false
            }
        },
        "start_date": {
            "type": "string",
            "description": "contract start date"
        },
        "end_date": {
            "type": "string",
            "description": "contract end date"
        },
        "id_form": {
            "type": "string",
            "description": "type of contract {DICTIONARY CONTRACT_TYPE}"
        },
        "status": {
            "type": "string",
            "description": "contract_request status"
        },
        "inserted_at": {
            "type": "string",
            "description": "ISO 8601 date and time in UTC timezone."
        },
        "inserted_by": {
            "type": "string"
        },
        "updated_at": {
            "type": "string",
            "description": "ISO 8601 date and time in UTC timezone."
        },
        "updated_by": {
            "type": "string"
        },
        "nhs_legal_entity_id": {
            "type": [
                "null",
                "string"
            ]
        },
        "issue_city": {
            "type": [
                "null",
                "string"
            ]
        },
        "nhs_signer_base": {
            "type": [
                "null",
                "string"
            ]
        },
        "nhs_contract_price": {
            "type": [
                "null",
                "number"
            ]
        },
        "nhs_payment_method": {
            "type": [
                "null",
                "string"
            ]
        }
    },
    "required": [
        "id",
        "contractor_legal_entity_id",
        "contractor_owner_id",
        "contractor_base",
        "contractor_payment_details",
        "contractor_rmsp_amount",
        "contractor_employee_divisions",
        "start_date",
        "end_date",
        "id_form",
        "status",
        "inserted_at",
        "inserted_by",
        "updated_at",
        "updated_by"
    ],
    "additionalProperties": false
}
